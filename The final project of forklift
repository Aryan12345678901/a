#pragma config(Sensor, S1,     ,               sensorEV3_Color)
#pragma config(Sensor, S2,     ,               sensorEV3_Ultrasonic)
#pragma config(Sensor, S3,     ,               sensorEV3_Touch)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//


task main()
{

	setMotorSpeed(motorB,45);
	setMotorSpeed(motorC,0);


	//while it is detecting a black line it will move foward
while(SensorValue(S1) == 1)
{
	setMotorSpeed(motorB,10);
	setMotorSpeed(motorC,10);
	setMotorSpeed(motorA,0);
}


//if it detects red it takes a left turn
while(SensorValue(S1)== 5)
{
	setMotorSpeed(motorB,5);
	setMotorSpeed(motorC,0);
	wait1Msec(3000);

	setMotorSpeed(motorB,10);
	setMotorSpeed(motorC,10);
	wait1Msec(4000);
	
	setMotorSpeed(motorA,5);
	wait1Msec(2000);
	
	setMotorSpeed(motorB,-10);
	setMotorSpeed(motorC,-10);
	wait1Msec(4000);
	
	setMotorSpeed(motorB,0);
setMotorSpeed(motorC,5);
wait1Msec(3000);

setMotorSpeed(motorB,10);
setMotorSpeed(motorC,10);
wait1Msec(1000);
}

//when it detects a green it will move foward
while(SensorValue(S1)== 3)
{
setMotorSpeed(motorB,10);
	setMotorSpeed(motorC,10);
}




}
