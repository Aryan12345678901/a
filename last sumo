#pragma config(Sensor, S2,     ,               sensorEV3_Ultrasonic)
#pragma config(Sensor, S3,     ,               sensorEV3_Color, modeEV3Color_Color)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

//Program ID:awesome

//Team:Aryan Khandelwal, Anna Lin, Md.Arib C, Nicholas P

//Purpose: To make the robot move in a designated way

task main()
{
//is it detects nothing then the robot keeps moving foward.
while(1==1)

{
	motor[motorC] = 50;
	motor[motorB] = 0;

//if it detects anything within 12 feet of it it goes to attack.
while (SensorValue(S2) < 12)

{

	motor[motorC] = 100;
	motor[motorB] = 100;


}
//if it detects the black line then it moves appropriately.
while(SensorValue(S3) == 1)
{
	motor[motorC] = -50;
	motor[motorB] = -50;
	wait1Msec(1000);
	motor[motorC] = 50;
	motor[motorB] = 0;
	wait1Msec(1000);
}

}


}
