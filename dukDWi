//Purpose: To make the robot move in a designated way


#pragma config(Sensor, S2,     ,               sensorEV3_Color)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

task main()
{
//allows for all the resetting
wait1Msec(3000);
//makes the counter have a 0 every time
int counter1 = 0;
//creeates a loop to count black line and move foward
while(counter1 < 6)
{
displayBigTextLine(3,"%d",counter1);

if(SensorValue(S2) >= 45)
{

motor[motorA] = 10;
wait1Msec(1000);
counter1++;
}
//is it detect the white line it doesn't count anyhting
if(SensorValue(S2) <= 45)
{
motor[motorA] = 10;
}
}
//when the counter turns 6 everything stops
while(counter1 == 6)
{
setLEDColor(ledRedFlash);
setMotorSpeed(motorA,0);
}

}
