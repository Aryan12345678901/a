
#pragma config(Sensor, S2,     ,               sensorEV3_Touch)
#pragma config(Sensor, S3,     ,               sensorEV3_Ultrasonic)
#pragma config(Sensor, S4,     ,               sensorEV3_Touch)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

//Program ID:ultrasonic

//Team:Aryan Khandelwal, Anna Lin, Md.Arib C, Nicholas P

//Purpose: To make the robot move in a designated way



//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
//allows the robot to use ultrasonic

void ultrasonic3025()
	{
		setMotorSpeed(motorB,75);
		setMotorSpeed(motorC,75);
	}

void ultrasonic2420()
	{
		setMotorSpeed(motorB,50);
		setMotorSpeed(motorC,50);
	}


	void ultrasonic1915()
	{
		setMotorSpeed(motorB,25);
		setMotorSpeed(motorC,25);
	}


	void ultrasonic10()
	{
		setMotorSpeed(motorB,0);
		setMotorSpeed(motorC,0);
	}



	//allows the robot to to touch sensor

	void touchsensor()
	{
	setMotorSpeed(motorB,0);
	setMotorSpeed(motorC,0);
	}







	task main()
	{
	int currentDistance = 0;

	repeat(forever)
  {

//allows us to see the distance to the object
  currentDistance = SensorValue(S3);
	displayCenteredBigTextLine(4, "Dist: %d cm", currentDistance);



// alows the robot to move at full speed
if(currentDistance > 30  )

	{

	setMotorSpeed(motorB,100);
	setMotorSpeed(motorC,100);

	}



	//allows the robot to slow down to 75 percent speed
	if(currentDistance < 30 && 24 < currentDistance )

	{

	ultrasonic3025();

	}




	//allows the robot to slow down to 50 percent speed
	if(currentDistance < 25 && 19 < currentDistance )

	{

ultrasonic2420();

	}


	//allows the robot to slow down to 25 percent speed
	if(currentDistance < 20 && 9 < currentDistance )

	{

ultrasonic1915();

	}



//allows the robot to stop
	if(currentDistance < 10  )

	{

		ultrasonic10();

	}

	//alows the robot to use bumper
	if(SensorValue(S2)== 1 || SensorValue(S4)== 1)

	{

		touchsensor();
	}

	}
	}
